            "Sid": "BigAnimalBasePolicy"
        },
        {
            "Action": [
                "ssm:AddTagsToResource",
                "ssm:GetParameters",
                "ssm:PutParameter"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:ssm:*:*:parameter/BA_*",
            "Sid": "BigAnimalSystemsManagerParameterStorePolicy"
        },
        {
            "Action": [
                "iam:PassRole",
                "logs:FilterLogEvents"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:iam::*:role/ba-aA1bB2cC3dD4eE5f-*",
                "arn:aws:iam::*:role/biganimal-role",
                "arn:aws:logs:*:*:log-group:/ecs/ba-bootstrap:log-stream:"
            ],
            "Sid": "BigAnimalECSTaskPolicy"
        },
        {
            "Action": "secretsmanager:*",
            "Effect": "Allow",
            "Resource": "arn:aws:secretsmanager:*:*:secret:BA*",
            "Sid": "BigAnimalSecretsPolicy"
        }
    ]
